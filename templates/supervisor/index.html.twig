{% extends 'base.html.twig' %}

{% block title %}Supervisor index{% endblock %}

{% block body %}
    <h1>Supervisor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>NumTel</th>
                <th>Cin</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for supervisor in supervisors %}
            <tr>
                <td>{{ supervisor.id }}</td>
                <td>{{ supervisor.createdat ? supervisor.createdat|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ supervisor.updatedat ? supervisor.updatedat|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ supervisor.nom }}</td>
                <td>{{ supervisor.prenom }}</td>
                <td>{{ supervisor.numTel }}</td>
                <td>{{ supervisor.cin }}</td>
                <td>{{ supervisor.adresse }}</td>
                <td>
                    <a href="{{ path('app_supervisor_show', {'id': supervisor.id}) }}">show</a>
                    <a href="{{ path('app_supervisor_edit', {'id': supervisor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_supervisor_new') }}">Create new</a>
{% endblock %}
