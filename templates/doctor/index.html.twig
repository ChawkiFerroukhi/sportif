{% extends "base.html.twig" %}
{% block content %}
    <main>
        {% if app.user.roles['ROLE_MASTER'] is defined %}
        <header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10" style="background-color: red;">
    {% else %}
        <header class="page-header page-header-dark bg-gradient" style="background-color: {{ app.user.clubid.color }};">
                    <div class="col-lg-12 bg-gradient pb-10" style="background-color: {{ app.user.clubid.color2 }};flex:right">
                        <img class="img-account-profile mb-2" src="{{ vich_uploader_asset(app.user.clubid, 'logoFile') }}" alt="" style="float:right; margin-top: 1rem; margin-right: 1rem;" />
                    </div>
    {% endif %}
                    <div class="col-lg-12" >
                <div class="page-header-content">
                    <div class="row align-items-center justify-content-between pt-3">
                        <div class="col-auto mb-3">
                            <h1 class="page-header-title">
                                <div class="page-header-icon">
                                    <i data-feather="user"></i>
                                </div>
                                Liste des Doctors                       
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main page content-->
        <div class="container-fluid px-4">
            <div class="card">
            {% if app.user.roles['ROLE_ADMIN'] is defined or app.user.roles['ROLE_MASTER'] is defined %}
                <div class="col-12 col-xl-auto mb-3">
                    <a class="btn btn-sm btn-light text-primary" href="{{ path('app_doctor_new') }}" style="float:right">
                        <i class="me-1" data-feather="plus"></i>
                        Ajouter Doctor                                                                                   
                    </a>
                </div>
            {% endif %}
                <div class="card-body table-responsive">
                    <table class="table" id="datatablesSimple">
                        <thead>
                            <tr>
                                <tr>
                                    <th>#</th>
                                    <th>Nom</th>
                                    <th>CIN</th>
                                    <th>Référence</th>
                                    
                                    <th></th>
                                </tr>
                            </tr>
                        </thead>
                        <tbody>
                            {% for doctor in doctors %}
                                <tr>
                                    <td>{{ doctor.id }}</td>
                                    <td>{{ doctor.nom }} {{ doctor.prenom }}</td>
                                    <td>{{ doctor.cin }}</td>
                                    <td>{{ doctor.ref }}</td>
                                    
                                    <td>
                                        <a class="btn btn-datatable btn-icon btn-transparent-dark me-2" href="{{ path('app_doctor_show', {'id': doctor.id}) }}">
                                            <i class="fa-solid fa-eye" style="color:green"></i>
                                        </a>
                                        {% if app.user.roles['ROLE_ADMIN'] is defined or app.user.roles['ROLE_MASTER'] is defined %}
                                        <a class="btn btn-datatable btn-icon btn-transparent-dark me-2" href="{{ path('app_doctor_edit', {'id': doctor.id}) }}">
                                            <i class="fa-solid fa-pen-to-square" style="color:orange"></i>
                                        </a>
                                        <a class="btn btn-datatable btn-icon btn-transparent-dark me-2">
                                            {{ include('doctor/_delete_form.html.twig') }}
                                        </a>
                                        {% elseif app.user.roles['ROLE_DOCTOR'] is defined and doctor.id == app.user.id %}
                                        <a class="btn btn-datatable btn-icon btn-transparent-dark me-2" href="{{ path('app_doctor_edit', {'id': doctor.id}) }}">
                                            <i class="fa-solid fa-pen-to-square" style="color:orange"></i>
                                        </a>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="9">no records found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
