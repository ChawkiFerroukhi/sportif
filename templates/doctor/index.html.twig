{% extends 'base.html.twig' %}

{% block title %}Doctor index{% endblock %}

{% block body %}
    <h1>Doctor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>NumTel</th>
                <th>Cin</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for doctor in doctors %}
            <tr>
                <td>{{ doctor.id }}</td>
                <td>{{ doctor.createdat ? doctor.createdat|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ doctor.updatedat ? doctor.updatedat|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ doctor.nom }}</td>
                <td>{{ doctor.prenom }}</td>
                <td>{{ doctor.numTel }}</td>
                <td>{{ doctor.cin }}</td>
                <td>{{ doctor.adresse }}</td>
                <td>
                    <a href="{{ path('app_doctor_show', {'id': doctor.id}) }}">show</a>
                    <a href="{{ path('app_doctor_edit', {'id': doctor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_doctor_new') }}">Create new</a>
{% endblock %}
