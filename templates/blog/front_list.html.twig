{% extends 'base_front.html.twig' %}
{% block title %}
Blog {{ section.nom }} {{ section.clubid.nom }}
{% endblock %}

{% block content %}


    
    <div class="wrapper">
        <header class="header">
            <div class="container">
                <div class="row">
                    <div class="col-md-2">
                        <div class="logo">
                            <img src="{{ vich_uploader_asset(section.clubid, 'logoFile') }}" style="height:6em;">
                        </div>
                    </div>
                    <div class="col-md-10">
                        <div class="menu">
                            <ul>
                            {% for stn in sections %}
                                <li {% if stn.id == section.id %}class="active"{% endif %}><a href="{{ path('app_blog_front_list',{'id' : stn.id})}}">{{ stn.nom }}</a></li>
                            {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </header>         
        <hr>           
        <section class="blog-post-area">
            <div class="container">
                <div class="row">
                    <div class="blog-post-area-style">
                        <div class="col-md-12" style="
                            text-align:center;
                        ">    
                            <h3 style="
                            font-family: Geometria;
                            font-weight: 700;
                            font-size: 40px;
                            color: #061e37;
                            ">
                                {{section.nom}}
                            </h3>
                        </div>
                        <div class="post">
                            <h4><span class="date">
                                <p>{{ section.description|raw }}</p>
                            </span></h4>  
                        </div>                      
                        <div class="col-md-12">
                            <div class="single-post">
                                <hr>
                                <h3><a href="#">Publications</a></h3>
                                <hr>
                            </div>
                        </div>
                        {% for blg in blogs %}
                        {% if blg.isVisible %}
                        <div class="col-md-3">
                            <div class="single-post">
                                <img src="{{ vich_uploader_asset(blg, 'coverFile') }}" alt="" style="width:16em;height:10em;">
                                <h3><a href="{{ path('app_blog_front',{'id':blg.id})}}">{{ blg.title }}</a></h3>
                                <h4><span>
                                {% if blg.createdat == blg.updatedat %}
                                    {{ blg.createdat|date('d M Y') }}
                                {% else %} 
                                    {{ blg.updatedat|date('d M Y') }}
                                {% endif %}
                                </span></h4>
                            </div>
                        </div>
                        {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </section>
    </div>

{% endblock %}