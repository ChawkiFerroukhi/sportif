{% extends 'base.html.twig' %}

{% block title %}Adherant{% endblock %}

{% block content %}
<main>
        {% if app.user.roles['ROLE_MASTER'] is defined %}
        <header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10" style="background-color: red;">
    {% else %}
        <header class="page-header page-header-dark bg-gradient" style="background-color: {{ app.user.clubid.color }};">
                    <div class="col-lg-12 bg-gradient pb-10" style="background-color: {{ app.user.clubid.color2 }};flex:right">
                        <img class="img-account-profile mb-2" src="{{ vich_uploader_asset(app.user.clubid, 'logoFile') }}" alt="" style="float:right; margin-top: 1rem; margin-right: 1rem;" />
                    </div>
    {% endif %}
                    <div class="col-lg-12" >
                <div class="page-header-content">
                    <div class="row align-items-center justify-content-between pt-3">
                        <div class="col-auto mb-3">
                            <h1 class="page-header-title">
                                <div class="page-header-icon"><i data-feather="users"></i></div>
                                Organigramme
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main page content-->
        <div class="container-xl px-4 mt-4">
            <div class="row">
                <div class="col-xl-6">
                    <!-- Account details card-->
                    <div class="card mb-4">
                        <div class="card-header">Présidence</div>
                        <div class="card-body">
                            <!-- Form Row-->
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (first name)-->
                                {% for pres in presidents %}
                                <div class="col-md-12" >
                                    <h2 class="small mb-1" for="inputFirstName" style="background-color:#f3f3f3; padding:20px;border-radius:5px; text-align:center;"><a href="{{ path('app_administrateur_show',{'id':pres.id}) }}">{{ pres.nomprenom}}</a></h2>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">Vice-Présidence</div>
                        <div class="card-body">
                            <!-- Form Row-->
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (first name)-->
                                {% for pres in vices %}
                                <div class="col-md-12" >
                                    <h2 class="small mb-1" for="inputFirstName" style="background-color:#f3f3f3; padding:20px;border-radius:5px; text-align:center;"><a href="{{ path('app_administrateur_show',{'id':pres.id}) }}">{{ pres.nomprenom}}</a></h2>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">Secrétariat</div>
                        <div class="card-body">
                            <!-- Form Row-->
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (first name)-->
                                {% for pres in SGs %}
                                <div class="col-md-12" >
                                    <h2 class="small mb-1" for="inputFirstName" style="background-color:#f3f3f3; padding:20px;border-radius:5px; text-align:center;"><a href="{{ path('app_administrateur_show',{'id':pres.id}) }}">{{ pres.nomprenom}}</a></h2>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">Trésorie</div>
                        <div class="card-body">
                            <!-- Form Row-->
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (first name)-->
                                {% for pres in tresoriers %}
                                <div class="col-md-12" >
                                    <h2 class="small mb-1" for="inputFirstName" style="background-color:#f3f3f3; padding:20px;border-radius:5px; text-align:center;"><a href="{{ path('app_administrateur_show',{'id':pres.id}) }}">{{ pres.nomprenom}}</a></h2>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-12">
                    <div class="card mb-4">
                        <div class="card-header">Chefs de Section</div>
                        <div class="card-body">
                            <!-- Form Row-->
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (first name)-->
                                {% for pres in chefs %}
                                <div class="col-3" >
                                    <h2 class="small mb-1" for="inputFirstName" style="background-color:#f3f3f3; padding:20px;border-radius:5px; text-align:center;" ><a href="{{ path('app_administrateur_show',{'id':pres.id}) }}">{{ pres.nomprenom}}</a></h2>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>


{% endblock %}
