{% extends 'base.html.twig' %}

{% block title %}Objective{% endblock %}

{% block content %}
<main>
        {% if app.user.roles['ROLE_MASTER'] is defined %}
        <header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10" style="background-color: red;">
    {% else %}
        <header class="page-header page-header-dark bg-gradient pb-10" style="background-color: {{ app.user.clubid.color }};">
        <img class="img-account-profile mb-2" src="{{ vich_uploader_asset(app.user.clubid, 'logoFile') }}" alt="" style="float:right; margin-top: 1rem; margin-right: 1rem;" />
    {% endif %}
            <div class="container-xl px-4">
                <div class="page-header-content">
                    <div class="row align-items-center justify-content-between pt-3">
                        <div class="col-auto mb-3">
                            <h1 class="page-header-title">
                                <div class="page-header-icon"><i data-feather="user-plus"></i></div>
                                Dossier Medical
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main page content-->
        <div class="container-xl px-4 mt-4">
            <div class="row">
                <div class="col-xl-12">
                    <!-- Account details card-->
                    <div class="card mb-4">
                        <div class="card-header">Dossier Medical
                            <a class="btn btn-outline-success" href="{{ path('app_mesure_new',{'id' : dossiermedical.id}) }}" style="float:right">Ajouter Mesure</a>
                        </div>
                        <div class="card-body">
                            <!-- Form Row-->
                            
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (first name)-->
                                <div class="col-md-6">
                                    <hr>
                                    <h2 class="small mb-1" for="inputFirstName">Adherant</h2>
                                    <p class=" mb-1" for="inputFirstName"><a href="{{ path('app_adherant_show',{'id' : dossiermedical.adherantid.id})}}">{{ dossiermedical.adherantid.nom }} {{ dossiermedical.adherantid.prenom }}</a> 
                                    <hr>  
                                </div>
                                <div class="col-md-6">
                                    <hr>
                                    <h2 class="small mb-1" for="inputFirstName">Date de Création</h2>
                                    <p class=" mb-1" for="inputFirstName">{{ dossiermedical.createdat|date('d/m/Y') }}</p>
                                    <hr>  
                                </div>
                            </div>

                            <div class="row gx-3 mb-3">
                                <!-- Form Group (first name)-->
                                <div class="col-md-12">
                                    <h2 class="small mb-1" for="inputFirstName">Liste des Notes</h2>
                                    <table id="datatablesSimple">
                                        <thead>
                                            <tr>
                                                <th width="10%">
                                                    Date de Création
                                                </th>
                                                <th width="45%">
                                                    Poids
                                                </th>
                                                <th width="45%">
                                                    Taille
                                                </th>
                                                <th width="45%">
                                                    IMC
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for  mesure in  dossiermedical.mesures %}
                                                <tr>
                                                    <td width="45%">
                                                        <a href="{{ path('app_mesure_show',{'id' : mesure.id})}}">{{ mesure.date|date('d/m/Y') }}</a>                                                    </td>
                                                    </td>
                                                    <td width="45%">
                                                        {{ mesure.poids }} kg
                                                    <td width="45%">
                                                        {{ mesure.taille }} m
                                                    </td>
                                                    <td width="45%">
                                                        {{ mesure.imc|number_format(2) }}
                                                    </td>
                                                    
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="17">
                                                        aucune entrée
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="col-12">
                                <a class="btn btn-outline-warning" href="{{ path('app_dossiermedical_edit',{'id' : dossiermedical.id}) }}" style="float:left">Modifier</a>
                                <a style="float:right">
                                    {{ include('dossiermedical/_delete_form.html.twig') }}
                                </a>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>


{% endblock %}
