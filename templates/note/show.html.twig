{% extends 'base.html.twig' %}

{% block title %}Objective{% endblock %}

{% block content %}
<main>
        {% if app.user.roles['ROLE_MASTER'] is defined %}
        <header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10" style="background-color: red;">
    {% else %}
        <header class="page-header page-header-dark bg-gradient" style="background-color: {{ app.user.clubid.color }};">
                    <div class="col-lg-12 bg-gradient pb-10" style="background-color: {{ app.user.clubid.color2 }};flex:right">
                        <img class="img-account-profile mb-2" src="{{ vich_uploader_asset(app.user.clubid, 'logoFile') }}" alt="" style="float:right; margin-top: 1rem; margin-right: 1rem;" />
                    </div>
    {% endif %}
                    <div class="col-lg-12" >
                <div class="page-header-content">
                    <div class="row align-items-center justify-content-between pt-3">
                        <div class="col-auto mb-3">
                            <h1 class="page-header-title">
                                <div class="page-header-icon"><i data-feather="percent"></i></div>
                                {{nt.createdat|date('d/m/Y') }}
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main page content-->
        <div class="container-xl px-4 mt-4">
            <div class="row">
                <div class="col-xl-12">
                    <!-- Account details card-->
                    <div class="card mb-4">
                        <div class="card-header">Fiche Performance</div>
                        <div class="card-body">
                            <!-- Form Row-->
                            
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (first name)-->
                                <div class="col-md-4">
                                    <hr>
                                    <h2 class="small mb-1" for="inputFirstName">Adherant</h2>
                                    <p class=" mb-1" for="inputFirstName"><a href="{{ path('app_adherant_show',{'id' : nt.adherantid.id})}}">{{ nt.adherantid.nom }} {{ nt.adherantid.prenom }}</a> 
                                    <hr>  
                                </div>
                                <div class="col-md-4">
                                    <hr>
                                    <h2 class="small mb-1" for="inputFirstName">Objective</h2>
                                    <p class=" mb-1" for="inputFirstName"><a href="{{ path('app_objectif_show',{'id' : nt.objectifid.id})}}">{{ nt.objectifid.nom }}</a> 
                                    <hr>  
                                </div>

                                <div class="col-md-4">
                                    <hr>
                                    <h2 class="small mb-1" for="inputFirstName">Note</h2>
                                    <p class=" mb-1" for="inputFirstName">{{ nt.note }}%</p> 
                                    <hr>  
                                </div>
                            </div>

                            <div class="row gx-3 mb-3">
                                <!-- Form Group (first name)-->
                                <div class="col-md-6">
                                    <hr>
                                    <h2 class="small mb-1" for="inputFirstName">Date</h2>
                                    <p class=" mb-1" for="inputFirstName">{{ nt.createdat|date('d/m/Y') }}</p>
                                    <hr>  
                                </div>

                                <div class="col-md-6">
                                    <hr>
                                    <h2 class="small mb-1" for="inputFirstName">Test</h2>
                                    <p class=" mb-1" for="inputFirstName"><a href="{{ path('app_teste_show',{'id' : nt.testeid.id})}}">{{ nt.testeid.nom }}</a> 
                                    <hr>  
                                </div>
                            </div>

                            <div class="row gx-3 mb-3">
                                <!-- Form Group (first name)-->
                                <div class="col-md-12">
                                    <hr>
                                    <h2 class="small mb-1" for="inputFirstName">Observation</h2>
                                    <p class=" mb-1" for="inputFirstName">{{ nt.observation|raw }}</p>
                                    <hr>  
                                </div>
                            </div>
                            <hr>
                            {% if app.user.roles['ROLE_ADMIN'] is defined or app.user.roles['ROLE_MASTER'] is defined or app.user.roles['ROLE_COACH'] is defined%}
                            <div class="col-12">
                                <a class="btn btn-outline-warning" href="{{ path('app_note_edit',{'id' : nt.id}) }}" style="float:left">Modifier</a>
                                <a style="float:right">
                                    {{ include('note/_delete_form.html.twig') }}
                                </a>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>


{% endblock %}
