{{ form_start(form) }}
<div class="row">
    <div class="col-xl-4">
        <div class="card mb-4">
            <div class="card-header">
                Logo          
            </div>
            <div class="card-body text-center">
                <div class="small font-italic text-muted mb-4">
                    No larger than 5 MB </br>                        
                    {% if club is defined %}
                        <img src="{{ vich_uploader_asset(club, 'logoFile') }}" alt="LOGO" class="img-thumbnail" width="200px" height="50%" id="image" />
                    {% endif %}
                </div>
            </div>
            <div class="card-body text-center">
                {{ form_widget(form.logoFile, {'attr':{'title':'','id':'file' }}) }}
            </div>
            <hr>
            <div class="card-body text-center">
                <div class="row gx-3 mb-3">
                    <div class="col-md-12">
                        {{ form_label(form.color, 'Couleur Primaire', {'label_attr':{'class':'small mb-1' }}) }}                                   
                        {{ form_widget(form.color, {'attr':{'class':'form-control' }}) }}                               
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.color) }}
                    </div>
                </div>
            </div>

            <div class="card-body text-center">
                <div class="row gx-3 mb-3">
                    <div class="col-md-12">
                        {{ form_label(form.color2, 'Couleur Secondaire', {'label_attr':{'class':'small mb-1' }}) }}                                   
                        {{ form_widget(form.color2, {'attr':{'class':'form-control' }}) }}                               
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.color2) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-8">
        <div class="card mb-4">
            <div class="card-header">
                Fiche Club                                            
            </div>
            <div class="card-body">
            
                <div class="row gx-3 mb-3">
                    <div class="col-md-12">
                        {{ form_label(form.nom, 'Nom', {'label_attr':{'class':'small mb-1' }}) }}                                   
                        {{ form_widget(form.nom, {'attr':{'class':'form-control' }}) }}                               
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.nom) }}
                    </div>
                </div>
                <div class="row gx-3 mb-3">
                    <div class="col-md-12">
                        {{ form_label(form.adresse, 'Adresse', {'label_attr':{'class':'small mb-1' }}) }}                                    
                        {{ form_widget(form.adresse, {'attr':{'class':'form-control' }}) }}       
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.adresse) }}
                    </div>
                </div>
                <div class="row gx-3 mb-3">
                    <div class="col-md-12">
                        {{ form_label(form.numTel, 'Phone number', {'label_attr':{'class':'small mb-1' }}) }}                                   
                        {{ form_widget(form.numTel, {'attr':{'class':'form-control' }}) }}                               
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.numTel) }}
                    </div>
                </div>

                <div class="row gx-3 mb-3">
                    <div class="col-md-12">
                        {{ form_label(form.dateFondation, 'Date de Fondation', {'label_attr':{'class':'small mb-1' }}) }}                                   
                        {{ form_widget(form.dateFondation, {'attr':{'class':'form-control' }}) }}                               
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.dateFondation) }}
                    </div>
                </div>
                
                <button class="btn btn-outline-primary">
                        {{ button_label|default('Sauvegarder') }}
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
<script>
function filePreview(input) {
    if (input.files && input.files[0]) {
        var reader = new FileReader();
        reader.onload = function (e) {
                $('#image').attr('src', e.target.result);
        }
        reader.readAsDataURL(input.files[0]);
    }
}
$("#club_logoFile_file").change(function () {
    filePreview(this);
});
</script>