{{ form_start(form) }}
<div class="row">
    <div class="col-xl-4">
        <div class="card mb-4">
            <div class="card-header">
                Couverture          
            </div>
            <div class="card-body text-center">
                <div class="small font-italic text-muted mb-4">
                    No larger than 5 MB </br>                        
                    {% if blog is defined %}
                        <img src="{{ vich_uploader_asset(blog, 'coverFile') }}" alt="COVER" class="img-thumbnail" width="600px" height="50%" />
                    {% endif %}
                </div>
            </div>
            <div class="card-body text-center">
                {{ form_widget(form.coverFile, {'attr':{'title':'' }}) }}
            </div>
            <hr>
            <div class="card-body text-center">
                <div class="row gx-3 mb-3">
                    <div class="col-md-12">
                        {{ form_label(form.video, 'Video (Optionnel)', {'label_attr':{'class':'small mb-1' }}) }}                                   
                        {{ form_widget(form.video, {'attr':{'class':'form-control' }}) }}                               
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.video) }}
                    </div>
                </div>
            </div>
            <hr>
            <div class="card-body text-center">
                <div class="row gx-3 mb-3">
                    <div class="col-md-12">
                        {{ form_label(form.isVisible, 'Visible ?', {'label_attr':{'class':'small mb-1' }}) }}                                   
                        {{ form_widget(form.isVisible, {'attr':{'class':'form-control' }}) }}                               
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.isVisible) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-8">
        <div class="card mb-4">
            <div class="card-header">
                Fiche Blog                                            
            </div>
            <div class="card-body">
            
                <div class="row gx-3 mb-3">
                    <div class="col-md-12">
                        {{ form_label(form.title, 'Titre', {'label_attr':{'class':'small mb-1' }}) }}                                   
                        {{ form_widget(form.title, {'attr':{'class':'form-control' }}) }}                               
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.title) }}
                    </div>
                </div>
                <div class="row gx-3 mb-3">
                    <div class="col-md-12">
                        {{ form_label(form.content, 'Contenu', {'label_attr':{'class':'small mb-1' }}) }}                                   
                        {{ form_widget(form.content, {'attr':{'class':'form-control' }}) }}                               
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.content) }}
                    </div>
                </div>
                <button class="btn btn-outline-primary">
                        {{ button_label|default('Sauvegarder') }}
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
