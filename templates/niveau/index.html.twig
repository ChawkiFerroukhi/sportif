{% extends "base.html.twig" %}
{% block content %}
    <main>
        <header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
            <div class="container-fluid px-4">
                <div class="page-header-content">
                    <div class="row align-items-center justify-content-between pt-3">
                        <div class="col-auto mb-3">
                            <h1 class="page-header-title">
                                <div class="page-header-icon">
                                    <i data-feather="user"></i>
                                </div>
                                Liste des Niveaux                       
                            </h1>
                        </div>
                        <div class="col-12 col-xl-auto mb-3">
                            <a class="btn btn-sm btn-light text-primary" href="{{ path('app_niveau_new') }}">
                                <i class="me-1" data-feather="user-plus"></i>
                                Ajouter Niveau                                                                                    
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main page content-->
        <div class="container-fluid px-4">
            <div class="card">
                <div class="card-body table-responsive">
                    <table class="table" id="datatablesSimple">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Nom</th>
                                            <th>Club Id</th>
                                            <th>Section Id</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for niveau in niveaux %}
                                        <tr>
                                            <td>{{ niveau.id }}</td>
                                            <td>{{ niveau.nom }}</td>
                                            <td>{{ niveau.clubid.nom }}</td>
                                            <td>{{ niveau.sectionid.nom }}</td>
                                            <td>
                                        <a class="btn btn-datatable btn-icon btn-transparent-dark me-2" href="{{ path('app_niveau_edit', {'id': niveau.id}) }}">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <a class="btn btn-datatable btn-icon btn-transparent-dark me-2">
                                            {{ include('niveau/_delete_form.html.twig') }}
                                        </a>
                                    </td>
                                           
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="9">no records found</td>
                                </tr>
                            {% endfor %}
                                    </tbody>
                                </table>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
